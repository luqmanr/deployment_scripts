#!/bin/bash
dbname=facetablet
dbuser=facever
dbpass=facever
table1=recog_user
table2=client
table3=client_token
table4=trx_log

file="/home/ubuntu/scripts/api-recognition-database-backup/rkb8.pass"
while IFS= read line
do
    remotepass=$line
    sshpass -p $remotepass ssh -p 25025 ubuntu@210.210.156.73 "PGPASSWORD=$dbpass pg_dump \
    -U $dbuser --format=custom -h localhost $dbname -t $table1 -t $table2 -t $table3" | \
    PGPASSWORD=$dbpass pg_restore --clean -U $dbuser -d $dbname &

    /home/ubuntu/scripts/api-recognition-database-backup/user-img-sync_script
done < "$file"
